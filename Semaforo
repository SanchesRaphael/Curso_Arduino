void setup()
{
  pinMode(7, OUTPUT); //vermelho
  pinMode(4, OUTPUT); //amarelo
  pinMode(2, OUTPUT); //verde
}

void loop()
{
  digitalWrite(2,HIGH); //verde ligado
  delay(2000);
  digitalWrite(2,LOW);
  digitalWrite(4,HIGH); //amarelo ligado
  delay(1000);
  digitalWrite(4,LOW);
  digitalWrite(7,HIGH); //Vermelho ligado
  delay(1000);
  digitalWrite(7,LOW);
}
